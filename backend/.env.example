# Backend Environment Variables
# Скопируйте этот файл в .env и заполните значения

# Секретный ключ для JWT токенов (используйте openssl rand -hex 32)
SECRET_KEY=your-secret-key-here-replace-with-random-string

# Алгоритм шифрования JWT
ALGORITHM=HS256

# Время жизни токена доступа (в минутах)
ACCESS_TOKEN_EXPIRE_MINUTES=30

# База данных
DATABASE_URL=sqlite:///./fot_mvp.db

# Режим работы (development, production)
ENVIRONMENT=development

# CORS настройки (разделенные запятой)
ALLOWED_ORIGINS=http://localhost:5173,http://127.0.0.1:5173

# Настройки логирования
LOG_LEVEL=INFO
